 recursive 

  
  int solve(vector<int>&arr , int i)
  {
      
      // base cases
        if(i == 0 )return 0 ;
        if(i == 1) return abs(arr[1] - arr[0]);
        
        
        int left  = solve(arr , i-1) + abs(arr[i] - arr[i-1]);
        int right = solve(arr , i-2) + abs(arr[i] - arr[i-2]);
        
        return min(left , right) ; 
  }
